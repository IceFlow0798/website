<div class="container">

  <h1>所有标签</h1>
  <div class="card-grid">
    {% for tag in collections.tagList %}
    <div class="card">
      <h2 class="card__title"><a href="{{ '/tags/' | url }}{{ tag.tagName }}">{{ tag.tagName }}</a></h2>
      <div class="card__subtitle">{{ tag.tagCount }} 篇文章</div>
    </div>
    {% endfor %}
  </div>
</div>
